<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LauncherActivity" parent="Base.Activity">
        <item name="android:windowBackground">@drawable/launcher_window_background</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="Base.Activity" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
